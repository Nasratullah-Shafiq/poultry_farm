<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Category for Poultry Farm -->
    <record id="module_category_poultry" model="ir.module.category">
        <field name="name">Poultry Farm System</field>
        <field name="sequence" eval="10"/>
    </record>

    <!-- Manager Group -->
    <record id="group_poultry_manager" model="res.groups">
        <field name="name">Poultry Manager</field>
        <field name="category_id" ref="poultry_farm.module_category_poultry"/>
    </record>

    <!--    app menu visibility to specific group -->
    <record id="base.menu_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>

    <!-- Discuss menu visible just for odoo Administrator user  -->
    <record id="mail.menu_root_discuss" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>

    <!-- Hr Employee Root menu visible just for odoo Administrator user  -->
    <record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>


    <!-- To do Root menu visible just for odoo Administrator user  -->
<!--    <record id="project_todo.menu_todo_todos" model="ir.ui.menu">-->
<!--        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>-->
<!--    </record>-->

    <!-- Record Officer Group -->
    <record id="group_poultry_record_officer" model="res.groups">
        <field name="name">Poultry Record Officer</field>
        <field name="category_id" ref="poultry_farm.module_category_poultry"/>
    </record>

</odoo>
