<odoo>

    <template id="report_poultry_finance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- Report Header -->
                    <div style="text-align:center; border-bottom:2px solid #4CAF50; padding-bottom:10px; margin-bottom:15px;">
                        <h1 style="color:#4CAF50; font-size:26px; margin:0;">Poultry Finance Report</h1>
                        <p style="font-size:14px; color:#555;">Comprehensive Financial Summary</p>
                    </div>

                    <!-- Report Date Range and Branch -->
                    <div style="margin-bottom:15px; font-size:14px; color:#333;">
                        <p>
                            <strong>From:</strong>
                            <span><t t-esc="o.start_date"/></span>
                            <span style="margin-left:20px;"></span>
                            <strong>To:</strong>
                            <span><t t-esc="o.end_date"/></span>
                        </p>
                        <p>
                            <strong>Branch:</strong>
                            <span><t t-esc="o.branch_id.name if o.branch_id else 'All Branches'"/></span>
                        </p>
                    </div>

                    <!-- Summary Section -->
                    <h3 style="color:#4CAF50; border-bottom:1px solid #ddd; padding-bottom:5px; margin-top:20px;">
                        Financial Summary
                    </h3>

                    <table style="width:100%; border-collapse:collapse; margin-top:10px; font-size:14px;">
                        <thead>
                            <tr style="background-color:#f5f5f5; border:1px solid #ddd;">
                                <th style="padding:8px; text-align:left;">Category</th>
                                <th style="padding:8px; text-align:right;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Income</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_income"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Sales</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_sales"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Purchases</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_purchases"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Expenses</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_expenses"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Salaries</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_salaries"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Feed Cost</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_feed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Medicine Cost</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_medicine"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Vaccination Cost</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_vaccination"/>
                                </td>
                            </tr>
                            <tr style="background-color:#f0fff0; font-weight:bold;">
                                <td style="padding:8px; border:1px solid #ddd;">Net Profit</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right; color:#4CAF50;">
                                    <t t-esc="o.net_profit"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>Powered by Poultry Farm Management System</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
