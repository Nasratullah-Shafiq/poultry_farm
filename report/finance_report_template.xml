<odoo>
    <!-- PDF Template -->
    <template id="report_poultry_finance_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 style="text-align:center;">Poultry Finance Report</h2>
                <p>
                    <strong>Date Range:</strong>
                    <span t-esc="doc.start_date"/> to <span t-esc="doc.end_date"/>
                </p>
                <p>
                    <strong>Branch:</strong>
                    <span t-esc="doc.branch_id.name or 'All Branches'"/>
                </p>

                <br/>

                <table class="table table-sm table-bordered" style="width:100%; border:1px solid #000;">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Description</th>
                            <th style="text-align:right;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Total Income</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_income"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Sales</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_sales"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Purchases</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_purchases"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Expenses</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_expenses"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Salaries</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_salaries"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Feed Cost</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_feed"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Medicine Cost</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_medicine"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Total Vaccination Cost</td>
                            <td style="text-align:right;">
                                <span t-esc="doc.total_vaccination"/>
                            </td>
                        </tr>
                        <tr style="background-color:#f0f0f0;">
                            <td><strong>Net Profit</strong></td>
                            <td style="text-align:right;"><strong><span t-esc="doc.net_profit"/></strong></td>
                        </tr>
                    </tbody>
                </table>

                <br/>
                <p style="text-align:center; font-size:10px; color:gray;">
                    Generated on <span t-esc="context.get('current_date', '')"/> by Odoo
                </p>
            </div>
        </t>
    </template>


</odoo>
