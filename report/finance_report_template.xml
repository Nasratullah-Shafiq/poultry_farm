<odoo>
    <template id="poultry_finance_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="padding:20px; font-family: Arial, sans-serif;">
                    <h2 style="text-align:center;">Poultry Farm Finance Report</h2>
                    <p style="text-align:center;">
                        Branch: <strong><t t-esc="doc.branch_id.name or 'All Branches'"/></strong><br/>
                        Period: <strong><t t-esc="doc.start_date"/> to <t t-esc="doc.end_date"/></strong>
                    </p>
                    <table style="width:100%; border-collapse: collapse; margin-top:20px;" class="table table-bordered">
                        <thead>
                            <tr style="background-color:#f2f2f2;">
                                <th style="border:1px solid #ccc; padding:6px;">Category</th>
                                <th style="border:1px solid #ccc; padding:6px; text-align:right;">Amount (<t t-esc="doc.currency_id.symbol"/>)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>Total Income</td><td style="text-align:right;"><t t-esc="doc.total_income"/></td></tr>
                            <tr><td>Total Sales</td><td style="text-align:right;"><t t-esc="doc.total_sales"/></td></tr>
                            <tr><td>Total Purchases</td><td style="text-align:right;"><t t-esc="doc.total_purchases"/></td></tr>
                            <tr><td>Total Expenses</td><td style="text-align:right;"><t t-esc="doc.total_expenses"/></td></tr>
                            <tr><td>Total Salaries</td><td style="text-align:right;"><t t-esc="doc.total_salaries"/></td></tr>
                            <tr><td>Total Feed Cost</td><td style="text-align:right;"><t t-esc="doc.total_feed"/></td></tr>
                            <tr><td>Total Medicine Cost</td><td style="text-align:right;"><t t-esc="doc.total_medicine"/></td></tr>
                            <tr><td>Total Vaccination Cost</td><td style="text-align:right;"><t t-esc="doc.total_vaccination"/></td></tr>
                            <tr style="font-weight:bold; background-color:#e6f7ff;">
                                <td>Net Profit</td><td style="text-align:right;"><t t-esc="doc.net_profit"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>



</odoo>
