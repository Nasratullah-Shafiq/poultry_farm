<odoo>
    <template id="report_poultry_finance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- Header -->
                    <div style="text-align:center; border-bottom:2px solid #4CAF50; padding-bottom:10px; margin-bottom:15px;">
                        <h1 style="color:#4CAF50; font-size:26px; margin:0;">
                            Poultry Finance Report
                        </h1>
                        <p style="font-size:14px; color:#555;">
                            Detailed Finance Summary
                        </p>
                    </div>

                    <!-- Filters -->
                    <div style="margin-bottom:15px; font-size:14px; color:#333;">
                        <p>
                            <strong>From:</strong>
                            <t t-esc="o.start_date"/>
                            &#160;&#160;
                            <strong>To:</strong>
                            <t t-esc="o.end_date"/>
                        </p>

                        <p>
                            <strong>Branch:</strong>
                            <t t-esc="o.branch_id.name if o.branch_id else 'All Branches'"/>
                        </p>

                        <p>
                            <strong>Farm:</strong>
                            <t t-esc="o.farm_id.name if o.farm_id else 'All Farms'"/>
                        </p>
                    </div>

                    <!-- Finance Table -->
                    <table style="width:100%; border-collapse:collapse; font-size:14px; margin-top:15px;">

                        <!-- Income -->
                        <tr style="background:#f5f5f5;">
                            <th colspan="2" style="padding:8px; text-align:left;">
                                Income
                            </th>
                        </tr>

                        <tr>
                            <td style="padding:8px; border:1px solid #ddd;">
                                Total Sales
                            </td>
                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                <t t-esc="o.total_sales"/>
                            </td>
                        </tr>

                        <tr>
                            <td style="padding:8px; border:1px solid #ddd;">
                                Net Income
                            </td>
                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                <t t-esc="o.total_income"/>
                            </td>
                        </tr>

                        <!-- Expenses -->
                        <tr style="background:#f5f5f5;">
                            <th colspan="2" style="padding:8px; text-align:left;">
                                Expenses
                            </th>
                        </tr>

                        <tr>
                            <td style="padding:8px; border:1px solid #ddd;">
                                Total Purchases
                            </td>
                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                <t t-esc="o.total_purchases"/>
                            </td>
                        </tr>

                        <tr>
                            <td style="padding:8px; border:1px solid #ddd;">
                                Total Salaries
                            </td>
                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                <t t-esc="o.total_salaries"/>
                            </td>
                        </tr>

                        <!-- Expense Breakdown -->
                        <tr style="background:#f5f5f5;">
                            <th colspan="2" style="padding:8px; text-align:left;">
                                Expense Breakdown
                            </th>
                        </tr>

                        <tr>
                            <td colspan="2"
                                style="padding:8px; border:1px solid #ddd; white-space:pre-line;">
                                <t t-esc="o.total_expense_by_type_text or 'No expenses recorded'"/>
                            </td>
                        </tr>

                        <!-- Net Profit -->
                        <tr style="background:#d9f7be;">
                            <th style="padding:8px; text-align:left;">
                                Net Profit
                            </th>
                            <th style="padding:8px; text-align:right;">
                                <t t-esc="o.net_profit"/>
                            </th>
                        </tr>

                    </table>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>
                            Powered by Poultry Farm Management System
                        </p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>


