<odoo>
    <template id="report_cash_deposit_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- Header -->
                    <div style="text-align:center; border-bottom:2px solid #2E86C1; padding-bottom:10px;">
                        <h1 style="color:#2E86C1; margin:0;">Cash Deposit Report</h1>
                        <p style="margin:0; font-size:14px;">Branch Cash Deposit Summary</p>
                    </div>

                    <!-- Filters -->
                    <div style="margin-top:15px; font-size:14px;">
                        <p>
                            <strong>From:</strong>
                            <t t-esc="o.start_date"/>
                            <span style="margin-left:25px;"></span>
                            <strong>To:</strong>
                            <t t-esc="o.end_date"/>
                        </p>
                        <p>
                            <strong>Branch:</strong>
                            <t t-esc="o.branch_id.name if o.branch_id else 'All Branches'"/>
                        </p>
                    </div>

                    <!-- Deposit Details Table -->
                    <table style="width:100%; border-collapse:collapse; margin-top:15px; font-size:13px;">
                        <thead>
                            <tr style="background:#f5f5f5; border:1px solid #ddd;">
                                <th style="padding:6px; border:1px solid #ddd;">Date</th>
                                <th style="padding:6px; border:1px solid #ddd;">Branch</th>
                                <th style="padding:6px; border:1px solid #ddd;">Cash Account</th>
                                <th style="padding:6px; border:1px solid #ddd;">Type</th>
                                <th style="padding:6px; border:1px solid #ddd;">Deposited By</th>
                                <th style="padding:6px; border:1px solid #ddd; text-align:right;">Amount</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="o.deposit_lines" t-as="line">
                                <tr>
                                    <td style="padding:6px; border:1px solid #ddd;"><t t-esc="line.date"/></td>
                                    <td style="padding:6px; border:1px solid #ddd;"><t t-esc="line.branch_id.name"/></td>
                                    <td style="padding:6px; border:1px solid #ddd;"><t t-esc="line.cash_account_id.account_no"/></td>
                                    <td style="padding:6px; border:1px solid #ddd;"><t t-esc="line.account_type"/></td>
                                    <td style="padding:6px; border:1px solid #ddd;"><t t-esc="line.user_id.name"/></td>
                                    <td style="padding:6px; border:1px solid #ddd; text-align:right;"><t t-esc="line.amount"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Currency-wise Summary -->
                    <div style="margin-top:20px; width:40%;">
                        <table style="width:100%; border-collapse:collapse;">
                            <tr>
                                <td style="padding:6px; border:1px solid #ddd;"><strong>Total Afghani Deposit</strong></td>
                                <td style="padding:6px; border:1px solid #ddd; text-align:right;"><t t-esc="o.total_afn"/></td>
                            </tr>
                            <tr>
                                <td style="padding:6px; border:1px solid #ddd;"><strong>Total USD Deposit</strong></td>
                                <td style="padding:6px; border:1px solid #ddd; text-align:right;"><t t-esc="o.total_usd"/></td>
                            </tr>
                            <tr>
                                <td style="padding:6px; border:1px solid #ddd;"><strong>Total Kaldar Deposit</strong></td>
                                <td style="padding:6px; border:1px solid #ddd; text-align:right;"><t t-esc="o.total_kld"/></td>
                            </tr>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; font-size:12px; color:#888;">
                        Generated on
                        <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        <br/>
                        Powered by Poultry Farm Management System
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
