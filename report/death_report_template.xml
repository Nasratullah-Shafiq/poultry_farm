<odoo>
    <template id="report_dead_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div style="text-align:center; border-bottom:2px solid #e74c3c; padding-bottom:10px; margin-bottom:15px;">
                        <h1 style="color:#e74c3c; font-size:26px; margin:0;">Poultry Death Report</h1>
                        <p style="font-size:14px; color:#555;">Detailed Record of All Deaths</p>
                    </div>

                    <div style="margin-bottom:15px; font-size:14px; color:#333;">
                        <p><strong>From:</strong> <t t-esc="o.start_date"/>
                           <span style="margin-left:20px;"></span>
                           <strong>To:</strong> <t t-esc="o.end_date"/></p>
                        <p><strong>Branch:</strong> <t t-esc="o.branch_id.name if o.branch_id else 'All Branches'"/></p>
                        <p><strong>Farm:</strong> <t t-esc="o.farm_id.name if o.farm_id else 'All Farms'"/></p>
                    </div>

                    <h3 style="color:#e74c3c; border-bottom:1px solid #ddd; padding-bottom:5px;">Death Details</h3>

                    <table style="width:100%; border-collapse:collapse; margin-top:10px; font-size:14px;">
                        <thead>
                            <tr style="background-color:#f5f5f5; border:1px solid #ddd;">
                                <th style="padding:8px;">Date</th>
                                <th style="padding:8px;">Branch</th>
                                <th style="padding:8px;">Farm</th>
                                <th style="padding:8px;">Type</th>
                                <th style="padding:8px;">Quantity</th>
                                <th style="padding:8px;">Reason</th>
                                <th style="padding:8px;">Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.death_lines" t-as="line">
                                <tr>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.date"/></td>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.branch_id.name"/></td>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.farm_id.name if line.farm_id else ''"/></td>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.item_type_id.name"/></td>
                                    <td style="padding:8px; border:1px solid #ddd; text-align:right;"><t t-esc="line.quantity"/></td>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.reason"/></td>
                                    <td style="padding:8px; border:1px solid #ddd;"><t t-esc="line.description"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h3 style="color:#e74c3c; border-top:1px solid #ddd; padding-top:10px; margin-top:20px;">Summary Totals</h3>
                    <table style="width:40%; border-collapse:collapse; margin-top:10px; font-size:14px;">
                        <tbody>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Deaths</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;"><t t-esc="o.total_deaths"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>Generated on <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                        <p>Powered by Poultry Farm Management System</p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
