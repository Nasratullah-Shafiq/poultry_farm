<odoo>
    <!-- Report Action for Poultry Finance -->
    <record id="action_poultry_finance_report" model="ir.actions.report">
        <field name="name">Poultry Finance Report</field>
        <field name="model">poultry.finance.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_poultry_finance_template</field>
        <field name="report_file">poultry_farm.report_poultry_finance_template</field>
        <field name="print_report_name">'Poultry Finance Report - %s' % (object.start_date)</field>
    </record>


    <!-- Report Action for Poultry Purchase -->
    <record id="action_poultry_purchase_report" model="ir.actions.report">
        <field name="name">Poultry Purchase Report</field>
        <field name="model">poultry.purchase.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_poultry_purchase_template</field>
        <field name="report_file">poultry_farm.report_poultry_purchase_template</field>
        <field name="print_report_name">'Poultry Purchase Report - %s' % (object.start_date)</field>
    </record>

    <!-- Report Action for Poultry Sale -->
    <record id="action_poultry_sale_report" model="ir.actions.report">
        <field name="name">Poultry Sale Report</field>
        <field name="model">poultry.sale.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_poultry_sale_template</field>
        <field name="report_file">poultry_farm.report_poultry_sale_template</field>
        <field name="print_report_name">'Poultry Sale Report - %s' % (object.start_date)</field>
    </record>


    <!-- Salary Payment Report Action -->
    <record id="action_salary_payment_report" model="ir.actions.report">
        <field name="name">Salary Payment Report</field>
        <field name="model">salary.payment.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_salary_payment_template</field>
        <field name="report_file">poultry_farm.report_salary_payment_template</field>
        <field name="print_report_name">'Salary Payment Report - %s' % (object.start_date)</field>
    </record>


    <record id="action_expense_report" model="ir.actions.report">
        <field name="name">Expense Report</field>
        <field name="model">expense.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <!-- MUST MATCH TEMPLATE ID -->
        <field name="report_name">poultry_farm.report_expense_template</field>
        <field name="report_file">poultry_farm.report_expense_template</field>
        <field name="print_report_name">
            'Expense Report - %s' % (object.branch_id.name if object.branch_id else 'All Branches')
        </field>
    </record>

    <!-- Report Action -->
    <record id="action_dead_report" model="ir.actions.report">
        <field name="name">Poultry Death Report</field>
        <field name="model">dead.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_dead_report_template</field>
        <field name="print_report_name">'Death Report - %s' % (object.start_date)</field>
    </record>

    <!-- Cash Report Wizard view action -->
    <record id="action_cash_deposit_report" model="ir.actions.report">
        <field name="name">Cash Deposit Report</field>
        <field name="model">cash.deposit.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_cash_deposit_template</field>
        <field name="report_file">poultry_farm.report_cash_deposit_template</field>
    </record>


    <!-- Report Action -->
    <record id="action_cash_account_report" model="ir.actions.report">
        <field name="name">Cash Account Report</field>
        <field name="model">cash.account.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_cash_account_template</field>
        <field name="report_file">Cash_Account_Report</field>
        <field name="print_report_name">'Cash Account Report - %s' % (object.id)</field>
    </record>
</odoo>



