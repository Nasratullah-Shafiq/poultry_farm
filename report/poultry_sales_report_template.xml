<odoo>
    <!-- QWeb Report Action -->
    <record id="report_poultry_sales" model="ir.actions.report">
        <field name="name">Poultry Sales Report</field>
        <field name="model">poultry.sale.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">poultry_farm.report_poultry_sales_template</field>
        <field name="report_file">poultry_farm.report_poultry_sales_template</field>
        <field name="print_report_name">'Poultry Sales Report'</field>
    </record>

    <!-- QWeb Template -->
    <template id="report_poultry_sales_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- Header -->
                    <div style="text-align:center; border-bottom:2px solid #4CAF50; padding-bottom:10px; margin-bottom:15px;">
                        <h1 style="color:#4CAF50; font-size:26px; margin:0;">Poultry Sales Report</h1>
                        <p style="font-size:14px; color:#555;">Branch and Type Wise Sales Summary</p>
                    </div>

                    <!-- Date and Branch -->
                    <div style="margin-bottom:15px; font-size:14px; color:#333;">
                        <p>
                            <strong>From:</strong>
                            <span><t t-esc="o.start_date"/></span>
                            <span style="margin-left:20px;"></span>
                            <strong>To:</strong>
                            <span><t t-esc="o.end_date"/></span>
                        </p>
                        <p>
                            <strong>Branch:</strong>
                            <span><t t-esc="o.branch_id.name if o.branch_id else 'All Branches'"/></span>
                        </p>
                    </div>

                    <!-- Grouped Sales -->
                    <t t-foreach="grouped_sales.items()" t-as="branch_data">
                        <div style="margin-top:20px;">
                            <h3 style="color:#4CAF50;">Branch: <t t-esc="branch_data[0]"/></h3>
                            <table style="width:100%; border-collapse:collapse; margin-top:10px; font-size:14px;">
                                <thead>
                                    <tr style="background-color:#f5f5f5; border:1px solid #ddd;">
                                        <th style="padding:8px; text-align:left;">Poultry Type</th>
                                        <th style="padding:8px; text-align:right;">Quantity</th>
                                        <th style="padding:8px; text-align:right;">Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="branch_data[1].items()" t-as="type_data">
                                        <tr>
                                            <td style="padding:8px; border:1px solid #ddd;">
                                                <t t-esc="type_data[0]"/>
                                            </td>
                                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                                <t t-esc="type_data[1]['quantity']"/>
                                            </td>
                                            <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                                <t t-esc="type_data[1]['revenue']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>

                    <!-- Totals -->
                    <div style="margin-top:30px;">
                        <h3 style="color:#4CAF50;">Overall Summary</h3>
                        <table style="width:100%; border-collapse:collapse; font-size:14px;">
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Quantity Sold</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_quantity"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:8px; border:1px solid #ddd;">Total Sales Revenue</td>
                                <td style="padding:8px; border:1px solid #ddd; text-align:right;">
                                    <t t-esc="o.total_sales_amount"/>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>Powered by Poultry Farm Management System</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
