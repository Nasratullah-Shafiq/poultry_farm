<odoo>
    <record id="view_poultry_finance_report_wizard" model="ir.ui.view">
        <field name="name">poultry.finance.report.wizard.form</field>
        <field name="model">poultry.finance.report</field>
        <field name="arch" type="xml">
            <form string="Poultry Finance Report Wizard">
                <group>
                    <field name="branch_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>

                <group string="Totals">
                    <field name="total_income" readonly="1"/>
                    <field name="total_purchases" readonly="1"/>
                    <field name="total_expenses" readonly="1"/>
                    <field name="net_profit" readonly="1"/>
                </group>

                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Print PDF" type="object" name="print_pdf_report" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for the wizard -->
    <record id="action_poultry_finance_report_wizard" model="ir.actions.act_window">
        <field name="name">Poultry Finance Report</field>
        <field name="res_model">poultry.finance.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

