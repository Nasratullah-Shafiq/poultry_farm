<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_poultry_cash_deposit_tree" model="ir.ui.view">
        <field name="name">poultry.cash.deposit.tree</field>
        <field name="model">poultry.cash.deposit</field>
        <field name="arch" type="xml">
            <tree string="Cash Deposits">
                <field name="cash_account_id"/>
                <field name="account_type"/>
                <field name="amount" sum="Total"/>
                <field name="currency_type"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_poultry_cash_deposit_form" model="ir.ui.view">
        <field name="name">poultry.cash.deposit.form</field>
        <field name="model">poultry.cash.deposit</field>
        <field name="arch" type="xml">
            <form string="Cash Deposit">
                <!-- HEADER -->
                <header>
                    <button name="action_deposit_done"
                            string="Mark as Deposit Done"
                            type="object"
                            class="btn-primary"
                            invisible="status != 'new_deposit'"/>

                    <field name="status"
                           widget="statusbar"
                           statusbar_visible="new_deposit,deposit_done"/>
                </header>
                <sheet>
                    <!-- RIBBONS -->
                    <widget name="web_ribbon"
                            title="New Deposit"
                            bg_color="bg-info"
                            invisible="status != 'new_deposit'"/>

                    <widget name="web_ribbon"
                            title="Deposit Done"
                            bg_color="bg-success"
                            invisible="status != 'deposit_done'"/>

                    <!-- HEADER SECTION (Cashier / Branch Info) -->

                    <!-- MAIN INFORMATION GROUP -->

                    <group>
                        <group string="Deposit Information">
                            <field name="account_type"/>
                            <field name="cash_account_id"
                                   domain="[('account_type', '=', account_type)]"/>
                            <field name="branch_id"
                                   invisible="account_type not in ('main', 'marco', 'bagram')"/>
                            <field name="cashier_id"
                                   invisible="account_type != 'cashier'"/>
                            <field name="currency_type"/>
                            <field name="amount"/>
                            <field name="date"/>
                            <field name="user_id" readonly="1"/>
                        </group>

                        <group string="Notes">
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>

                <!-- CHATTER -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


