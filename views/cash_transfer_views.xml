<odoo>
    <!-- Cash Transfer Action -->
    <record id="action_cash_transfer" model="ir.actions.act_window">
        <field name="name">Cash Transfers</field>
        <field name="res_model">poultry.cash.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and confirm cash transfers from Main Account to Branch/Expense/Salary Accounts.
            </p>
        </field>
    </record>

    <!-- Cash Transfer Menu -->
    <menuitem id="menu_cash_transfer"
              name="Cash Transfers"
              parent="menu_poultry_finance"
              action="action_cash_transfer"
              sequence="20"/>

    <!-- Tree View -->
    <record id="view_cash_transfer_tree" model="ir.ui.view">
        <field name="name">poultry.cash.transfer.tree</field>
        <field name="model">poultry.cash.transfer</field>
        <field name="arch" type="xml">
            <tree string="Cash Transfers">
                <field name="name"/>
                <field name="date"/>
                <field name="from_account_id"/>
                <field name="to_account_id"/>
                <field name="amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cash_transfer_form" model="ir.ui.view">
        <field name="name">poultry.cash.transfer.form</field>
        <field name="model">poultry.cash.transfer</field>
        <field name="arch" type="xml">
            <form string="Cash Transfer">
                <header>
                    <button name="action_confirm"
                            string="Confirm Transfer"
                            type="object"

                            class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="amount"/>`````
                        <field name="note"/>

                    </group>
                    <group>
                        <group string="From Account (Source of Transfer)">

                            <field name="from_account_type"/>
                            <field name="from_account_id"
                                   domain="[('account_type', '=', from_account_type)]"/>

                            <field name="from_branch_id" invisible="from_account_type not in ('main', 'marco', 'bagram')"/>
                            <field name="from_cashier_id" invisible="from_account_type != 'cashier'"/>
                            <field name="from_currency_type"/>

                            <field name="from_account_balance"/>

                        </group>
                        <group string="To Account (Destination of Transfer)">

                            <field name="to_account_type"/>
                            <field name="to_account_id"
                                   domain="[('account_type', '=', to_account_type)]"/>

                            <field name="to_branch_id" invisible="to_account_type not in ('main', 'marco', 'bagram')"/>
                            <field name="to_cashier_id" invisible="to_account_type != 'cashier'"/>
                            <field name="to_currency_type"/>

                            <field name="to_account_balance"/>
                        </group>


                    </group>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
