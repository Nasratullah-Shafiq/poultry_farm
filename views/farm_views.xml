<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sequence for farm codes -->
    <record id="seq_poultry_farm" model="ir.sequence">
        <field name="name">Poultry Farm</field>
<!--        <field name="code">poultry.farm.seq</field>-->
        <field name="prefix">FARM/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Tree view -->
    <record id="view_poultry_farm_tree" model="ir.ui.view">
        <field name="name">poultry.farm.tree</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <tree string="Farms">
<!--                <field name="code"/>-->
                <field name="name"/>
                <field name="branch_id"/>
                <field name="manager_id"/>
                <field name="current_stock"/>
                <field name="capacity"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_poultry_farm_form" model="ir.ui.view">
        <field name="name">poultry.farm.form</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <form string="Farm">
                <sheet>
                    <group>
                        <group>
<!--                            <field name="code" readonly="1"/>-->
<!--                            <field name="name"/>-->
                        </group>
                        <group>
                            <field name="branch_id"/>
                            <field name="manager_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="location"/>
                        <field name="state"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="capacity"/>
                        <field name="current_stock" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Notes and History">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

