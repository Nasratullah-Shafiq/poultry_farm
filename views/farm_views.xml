         Optional Pivot / Graph Views
    ============================ -->
    <record id="view_poultry_purchase_pivot" model="ir.ui.view">
        <field name="name">poultry.purchase.pivot</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <pivot string="Purchases Pivot">
                <field name="quantity" type="measure"/>
                <field name="unit_price" type="measure"/>
                <field name="branch_id" type="row"/>
                <field name="item_type_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="view_poultry_purchase_graph" model="ir.ui.view">
        <field name="name">poultry.purchase.graph</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <graph string="Purchases Graph" type="bar">
                <field name="branch_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

