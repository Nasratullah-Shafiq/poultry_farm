    <!-- Vaccination -->
    <record id="view_vaccination_tree" model="ir.ui.view">
        <field name="name">poultry.purchase.tree</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vaccine_date"/>
                <field name="vaccine_name"/>
                <field name="item_type_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <record id="view_vaccination_form" model="ir.ui.view">
        <field name="name">poultry.vaccination.form</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="item_type_id"/>
                        <field name="branch_id"/>
                        <field name="vaccine_name"/>
                        <field name="vaccine_date"/>
                        <field name="responsible_id"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vaccination Search View -->
    <record id="view_vaccination_search" model="ir.ui.view">
        <field name="name">poultry.vaccination.search</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <search string="Search Vaccinations">
                <field name="vaccine_name"/>
                <field name="branch_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_branch" string="Branch" context="{'group_by':'branch_id'}"/>
                </group>
                <searchpanel>
                    <field name="branch_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

