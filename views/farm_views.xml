<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =========================
         ROOT MENU FOR FARM
    ========================== -->
    <menuitem id="menu_farm_root" name="Farm" sequence="15" parent=""/>

    <!-- =========================
         POULTRY ITEM TYPE VIEWS
    ========================== -->
    <!-- Tree View for Item Types -->
    <record id="view_item_type_tree" model="ir.ui.view">
        <field name="name">item.type.tree</field>
        <field name="model">item.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Item Types -->
    <record id="view_item_type_form" model="ir.ui.view">
        <field name="name">item.type.form</field>
        <field name="model">item.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open Item Types -->
    <record id="action_item_type" model="ir.actions.act_window">
        <field name="name">Item Types</field>
        <field name="res_model">item.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu for Item Types -->
    <menuitem id="menu_item_types" name="Item Types" parent="menu_poultry_setup" action="action_item_type"/>

    <!-- =========================
         POULTRY PURCHASE VIEWS
    ========================== -->
    <!-- Tree View for Purchases -->
    <record id="view_poultry_purchase_tree" model="ir.ui.view">
        <field name="name">poultry.purchase.tree</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <tree string="Poultry Purchase" create="true" edit="true">
                <field name="date"/>
                <field name="branch_id"/>
                <field name="item_type_id"/>
                <field name="uom_id"/>
                <field name="quantity"/>
                <field name="unit_price" widget="monetary" sum="Total Unit Price"/>
                <field name="total" widget="monetary" sum="Grand Total"/>

                <field name="supplier_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Purchases -->
    <record id="view_poultry_purchase_form" model="ir.ui.view">
        <field name="name">poultry.purchase.form</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <form string="Poultry Purchase" create="true" edit="true">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="branch_id"/>
                            <field name="item_type_id"/>
                            <field name="supplier_id"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="uom_id"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="total" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter for messages and activities -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pivot View for Purchases -->
    <record id="view_poultry_purchase_pivot" model="ir.ui.view">
        <field name="name">poultry.purchase.pivot</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <pivot string="Purchases Pivot">
                <field name="quantity" type="measure"/>
                <field name="unit_price" type="measure"/>
                <field name="branch_id" type="row"/>
                <field name="item_type_id" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View for Purchases -->
    <record id="view_poultry_purchase_graph" model="ir.ui.view">
        <field name="name">poultry.purchase.graph</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <graph string="Purchases Graph" type="bar">
                <field name="branch_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search View for Purchases -->
    <record id="view_poultry_purchase_search" model="ir.ui.view">
        <field name="name">poultry.purchase.search</field>
        <field name="model">poultry.purchase</field>
        <field name="arch" type="xml">
            <search string="Search Purchases">
                <field name="date"/>
                <field name="branch_id"/>
                <field name="item_type_id"/>
                <field name="supplier_id"/>

                <!-- Search Panel for Branch and Type -->
                <searchpanel>
                    <field name="branch_id" string="Branch"/>
                    <field name="item_type_id" string="Poultry Type"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Action to open Purchases -->
    <record id="action_purchase" model="ir.actions.act_window">
        <field name="name">Poultry Purchases</field>
        <field name="res_model">poultry.purchase</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_poultry_purchase_search"/>
    </record>

    <!-- Menu for Purchases -->
    <menuitem id="menu_poultry_purchases"
              name="Purchases"
              parent="menu_poultry_farm"
              action="action_purchase"/>


    <!-- Vaccination Tree -->
    <record id="view_vaccination_tree" model="ir.ui.view">
        <field name="name">poultry.vaccination.tree</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vaccine_date"/>
                <field name="vaccine_name"/>
                <field name="item_type_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <!-- Vaccination Form -->
    <record id="view_vaccination_form" model="ir.ui.view">
        <field name="name">poultry.vaccination.form</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="item_type_id"/>
                        <field name="branch_id"/>
                        <field name="vaccine_name"/>
                        <field name="vaccine_date"/>
                        <field name="responsible_id"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vaccination Search -->
    <record id="view_vaccination_search" model="ir.ui.view">
        <field name="name">poultry.vaccination.search</field>
        <field name="model">poultry.vaccination</field>
        <field name="arch" type="xml">
            <search string="Search Vaccinations">
                <field name="vaccine_name"/>
                <field name="branch_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_branch" string="Branch" context="{'group_by':'branch_id'}"/>
                </group>
                <searchpanel>
                    <field name="branch_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Root Menu -->
    <!--    <menuitem id="menu_farm_root" name="Farm" sequence="15" parent=""/>-->

</odoo>
