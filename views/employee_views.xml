<!-- poultry_farm_management/views/employee_views.xml -->
<odoo>
    <data>
        <!-- ===========================
             TREE VIEW: Employees
        ============================ -->
        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">poultry.employee.tree</field>
            <field name="model">poultry.employee</field>
            <field name="arch" type="xml">
                <tree string="Employees">
                    <field class="text-break" name="name" options="{'line_breaks': False}" widget="text"
                           placeholder="e.g. Cheese Burger"/>
                    <!--                    <field name="name"/>-->
                    <field name="employee_code"/>
                    <field name="job_title"/>
                    <field name="branch_id"/>
                    <field name="farm_id"/>
                    <field name="salary"/>
                    <field name="hire_date"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- ===========================
             FORM VIEW: Employees (with chatter)
        ============================ -->
        <record id="view_poultry_employee_form" model="ir.ui.view">
            <field name="name">poultry.employee.form</field>
            <field name="model">poultry.employee</field>
            <field name="arch" type="xml">

                <form string="Employee">
                    <sheet>
                        <field name="employee_status" invisible="1"/>
                        <widget name="web_ribbon"
                                title="New Employee"
                                bg_color="bg-info"
                                invisible="employee_status != 'new'"/>

                        <widget name="web_ribbon"
                                title="Hired Employee"
                                bg_color="bg-success"
                                invisible="employee_status != 'hired'"/>

                        <widget name="web_ribbon"
                                title="Fired Employee"
                                bg_color="bg-danger"
                                invisible="employee_status != 'fired'"/>

                        <!-- HEADER (Avatar + Name) -->
                        <div class="oe_title">
                            <div class="d-flex align-items-center">

                                <!-- Avatar -->
                                <div class="me-3">
                                    <field name="image_1920"
                                           widget="image"
                                           class="oe_avatar"
                                           options="{'preview_image': 'image_1920'}"/>
                                </div>

                                <!-- Name + Code -->
                                <div>
                                    <h1>
                                        <field name="name"
                                               placeholder="Employee Name"/>
                                    </h1>
                                    <div class="text-muted">
                                        <field name="employee_code"
                                               readonly="1"/>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <!-- MAIN INFORMATION -->
                        <group>
                            <group string="Job Information">
                                <field name="branch_id"/>
                                <field name="farm_id"/>
                                <field name="job_title"/>
                                <field name="hire_date"/>
                            </group>

                            <group string="Compensation">
                                <field name="salary"/>
                                <field name="currency_id"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <!-- CONTACT INFORMATION -->
                        <group string="Contact Details">
                            <field name="phone"/>
                            <field name="address"/>
                        </group>

                    </sheet>
                    <!-- CHATTER (STANDARD ODOO WAY) -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>

            </field>
        </record>

        <!-- views/employee_views.xml -->
        <record id="poultry_employee_kanban_view" model="ir.ui.view">
            <field name="name">poultry.employee.kanban</field>
            <field name="model">poultry.employee</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">

                <kanban class="o_hr_employee_kanban" sample="1">

                    <!-- Declare fields -->
                    <field name="name"/>
                    <field name="job_title"/>
                    <field name="phone"/>
                    <field name="branch_id"/>
                    <field name="salary"/>
                    <field name="currency_id"/>
                    <field name="image_1920"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click
                                o_kanban_record_has_image_fill
                                o_hr_kanban_record">

                                <!-- LEFT IMAGE (exact HR behavior) -->
                                <t t-if="record.image_1920.raw_value">
                                    <field name="image_1920"
                                           class="o_kanban_image_fill_left d-block"
                                           widget="background_image"
                                           options="{'zoom': true, 'zoom_delay': 1000}"/>
                                </t>

                                <t t-else="">
                                    <div class="o_kanban_image_fill_left
                                        d-flex
                                        align-items-center
                                        justify-content-center
                                        bg-100 bg-gradient">
                                        <svg class="w-75 h-75 opacity-50" viewBox="0 0 20 20">
                                            <g fill="currentColor">
                                                <path d="M 10 11 C 4.08 11 2 14 2 16 L 2 19 L 18 19 L 18 16 C 18 14 15.92 11 10 11 Z"/>
                                                <circle cx="10" cy="5.5" r="4.5"/>
                                            </g>
                                        </svg>
                                    </div>
                                </t>

                                <!-- DETAILS -->
                                <div class="oe_kanban_details">

                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">

                                            <!-- Name -->
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>

                                            <!-- Job Title -->
                                            <!--                                            <span class="o_kanban_record_subtitle">-->
                                            <!--                                                <field name="job_title"/>-->
                                            <!--                                            </span>-->
                                            <div class="mt-1">
                                                <t t-if="record.job_title.value">
                                                    <span class="badge rounded-pill bg-info text-white">
                                                        <t t-esc="record.job_title.value"/>
                                                    </span>
                                                </t>
                                            </div>
                                        </div>
                                    </div>

                                    <ul>
                                        <!-- Phone -->
                                        <li class="o_force_ltr">
                                            <i class="fa fa-fw me-2 fa-phone text-primary"/>
                                            <field name="phone"/>
                                        </li>

                                        <!-- Branch -->
                                        <li class="o_text_overflow">
                                            <i class="fa fa-fw me-2 fa-building text-primary"/>
                                            <field name="branch_id"/>
                                        </li>

                                        <!-- Salary -->
                                        <li>
                                            <i class="fa fa-fw me-2 fa-money text-primary"/>
                                            <field name="salary" widget="monetary"/>
                                        </li>
                                    </ul>
                                </div>

                                <!-- BOTTOM BAR (same HR spacing & shadow) -->
                                <div class="oe_kanban_content
                                    o_hr_employee_kanban_bottom
                                    position-absolute
                                    bottom-0
                                    start-0
                                    end-0">
                                    <div class="o_kanban_record_bottom mt-3">
                                        <div class="oe_kanban_bottom_left"/>
                                        <div class="oe_kanban_bottom_right"/>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>


        <!-- ===========================
             SEARCH VIEW: Employees
        ============================ -->
        <record id="view_employee_search" model="ir.ui.view">
            <field name="name">poultry.employee.search</field>
            <field name="model">poultry.employee</field>
            <field name="arch" type="xml">
                <search string="Search Employees">
                    <!-- Top search bar -->
                    <field name="name"/>
                    <field name="employee_code"/>
                    <field name="job_title"/>
                    <field name="branch_id"/>
                    <field name="hire_date"/>
                    <field name="active"/>

                    <!-- Group By options -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                        <filter name="group_by_job" string="Job Title" context="{'group_by': 'job_title'}"/>
                        <filter name="group_by_hire_date" string="Hire Date" context="{'group_by': 'hire_date'}"/>
                        <filter name="group_by_active" string="Active" context="{'group_by': 'active'}"/>
                    </group>

                    <!-- Search Panel -->
                    <searchpanel>
                        <field name="branch_id" string="Branch" icon="fa-sitemap"/>
                        <field name="farm_id" string="Farm" icon="fa-home"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <!-- ===========================
             PIVOT VIEW: Employees
        ============================ -->
        <record id="view_employee_pivot" model="ir.ui.view">
            <field name="name">poultry.employee.pivot</field>
            <field name="model">poultry.employee</field>
            <field name="arch" type="xml">
                <pivot string="Employee Analysis">
                    <field name="salary" type="measure"/>
                    <field name="branch_id" type="row"/>
                    <field name="job_title" type="col"/>
                    <field name="hire_date"/>
                </pivot>
            </field>
        </record>

        <!-- ===========================
             GRAPH VIEW: Employees
        ============================ -->
        <record id="view_employee_graph" model="ir.ui.view">
            <field name="name">poultry.employee.graph</field>
            <field name="model">poultry.employee</field>
            <field name="arch" type="xml">
                <graph string="Employee Graph" type="bar">
                    <field name="salary" type="measure"/>
                    <field name="branch_id" type="row"/>
                    <field name="job_title"/>
                </graph>
            </field>
        </record>

        <!-- ===========================
             ACTION: Employees
        ============================ -->
        <record id="action_employee" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="res_model">poultry.employee</field>
            <field name="view_mode">kanban,form,tree,graph,pivot</field>
            <field name="search_view_id" ref="view_employee_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage your farm employees.
                </p>
            </field>
        </record>

        <!-- ===========================
             MENU ITEM: Employees
        ============================ -->
        <menuitem id="menu_poultry_employees" name="Employees" parent="menu_poultry_hr" action="action_employee"/>

    </data>
</odoo>
