<odoo>
    <!-- ============================
         TREE VIEW
    ============================ -->
    <record id="view_poultry_sale_tree" model="ir.ui.view">
        <field name="name">poultry.sale.tree</field>
        <field name="model">poultry.sale</field>
        <field name="arch" type="xml">
            <tree string="Poultry Sales" create="true" edit="true">
                <field name="date"/>
                <field name="branch_id"/>
                <field name="item_type_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="revenue"/>
                <field name="buyer"/>
            </tree>
        </field>
    </record>

    <!-- ============================
         FORM VIEW
    ============================ -->
    <record id="view_poultry_sale_form" model="ir.ui.view">
        <field name="name">poultry.sale.form</field>
        <field name="model">poultry.sale</field>
        <field name="arch" type="xml">
            <form string="Poultry Sale">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="branch_id"/>
                            <field name="item_type_id"/>
                            <field name="buyer"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="revenue" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="message_ids" widget="mail_thread"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================
         SEARCH VIEW
    ============================ -->
    <record id="view_poultry_sale_search" model="ir.ui.view">
        <field name="name">poultry.sale.search</field>
        <field name="model">poultry.sale</field>
        <field name="arch" type="xml">
            <search string="Search Sales">
                <field name="date"/>
                <field name="branch_id"/>
                <field name="item_type_id"/>
                <field name="buyer"/>
                <filter string="Today" name="today" domain="[('date', '=', context_today())]"/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"/>
            </search>
        </field>
    </record>

    <!-- ============================
         ACTION
    ============================ -->
    <record id="action_poultry_sale" model="ir.actions.act_window">
        <field name="name">Poultry Sales</field>
        <field name="res_model">poultry.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first poultry sale record
            </p>
        </field>
    </record>

    <!-- ============================
         MENU ITEM
    ============================ -->
    <!-- Adjust parent to your actual menu -->
    <menuitem id="menu_poultry_sale_root"
              name="Sales"
              parent="menu_poultry_root"
              action="action_poultry_sale"
              sequence="20"/>
</odoo>
