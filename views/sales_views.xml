<odoo>
<!-- Poultry Sale Search View -->
<record id="view_sale_search" model="ir.ui.view">
    <field name="name">poultry.sale.search</field>
    <field name="model">poultry.sale</field>
    <field name="arch" type="xml">
        <search string="Search Sales">
            <!-- Search fields -->
            <field name="date"/>
            <field name="branch_id"/>
            <field name="item_type_id"/>
            <field name="buyer"/>

            <!-- Group By -->
            <group expand="0" string="Group By">
                <filter name="group_by_branch" string="Branch" context="{'group_by':'branch_id'}"/>
                <filter name="group_by_item_type" string="Poultry Type" context="{'group_by':'item_type_id'}"/>
                <filter name="group_by_buyer" string="Buyer" context="{'group_by':'buyer'}"/>
            </group>

            <!-- Search Panel -->
            <searchpanel>
                <field name="branch_id"/>
                <field name="item_type_id"/>
            </searchpanel>
        </search>
    </field>
</record>
<!-- Sales -->
 <record id="view_sale_tree" model="ir.ui.view">
    <field name="name">poultry.sale.tree</field>
    <field name="model">poultry.sale</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="branch_id"/>
        <field name="item_type_id"/>
        <field name="quantity"/>
        <field name="unit_price"/>
        <field name="revenue"/>
      </tree>
    </field>
  </record>
  <record id="view_sale_form" model="ir.ui.view">
    <field name="name">poultry.sale.form</field>
    <field name="model">poultry.sale</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="branch_id"/>
            <field name="item_type_id"/>
            <field name="quantity"/>
            <field name="unit_price"/>
            <field name="revenue" readonly="1"/>
            <field name="buyer"/>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids"/>
          <field name="activity_ids"/>
          <field name="message_ids"/>
        </div>
      </form>
    </field>
  </record>
  <record id="action_sale" model="ir.actions.act_window">
    <field name="name">Poultry Sales</field>
    <field name="res_model">poultry.sale</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="menu_poultry_sales" name="Sales" parent="menu_poultry_farm" action="action_sale"/>

</odoo> <!-- Sales -->
