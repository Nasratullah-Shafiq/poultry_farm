<odoo>
    <data>
        <!-- ===========================
             TREE VIEW: Dead Chickens
        ============================ -->
        <record id="view_poultry_death_tree" model="ir.ui.view">
            <field name="name">poultry.death.tree</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <tree string="Dead Chickens" create="true" edit="true" delete="true">
                    <field name="date"/>
                    <field name="item_type_id"/>
                    <field name="branch_id"/>
                    <field name="quantity"/>
                    <field name="reason"/>

                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <!-- ===========================
     FORM VIEW: Dead Chickens (with chatter)
============================ -->
        <record id="view_poultry_death_form" model="ir.ui.view">
            <field name="name">poultry.death.form</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <form string="Poultry Death Record">
                    <sheet>
                        <group>
                            <group>
                                <field name="item_type_id"/>
                                <field name="branch_id"/>
                                <field name="date"/>
                                <field name="quantity"/>

                            </group>
                            <group>
                                <field name="reason"/>
                                <field name="notes"/>

                            </group>
                        </group>
                    </sheet>

                    <!-- âœ… Chatter section -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Kanban view for death record of the Farm-->
        <record id="view_poultry_death_kanban" model="ir.ui.view">
            <field name="name">poultry.death.kanban</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard">
                    <!-- Required fields -->
                    <field name="death_last_24h"/>
                    <field name="death_current_month"/>
                    <field name="death_current_year"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card">

                                <!-- KPI CARDS -->
                                <div class="row text-center mb-3">

                                    <!-- Last 24 Hours -->
                                    <div class="col-4">
                                        <div class="oe_stat_button bg-danger text-white p-3 rounded">
                                            <i class="fa fa-clock-o fa-2x"/>
                                            <div class="mt-1">
                                                <strong t-esc="record.death_last_24h.value"/>
                                            </div>
                                            <div>Last 24 Hours</div>
                                        </div>
                                    </div>

                                    <!-- This Month -->
                                    <div class="col-4">
                                        <div class="oe_stat_button bg-warning text-white p-3 rounded">
                                            <i class="fa fa-calendar fa-2x"/>
                                            <div class="mt-1">
                                                <strong t-esc="record.death_current_month.value"/>
                                            </div>
                                            <div>This Month</div>
                                        </div>
                                    </div>

                                    <!-- This Year -->
                                    <div class="col-4">
                                        <div class="oe_stat_button bg-info text-white p-3 rounded">
                                            <i class="fa fa-bar-chart fa-2x"/>
                                            <div class="mt-1">
                                                <strong t-esc="record.death_current_year.value"/>
                                            </div>
                                            <div>This Year</div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- ===========================
             SEARCH VIEW: Dead Chickens
        ============================ -->
        <record id="view_poultry_death_search" model="ir.ui.view">
            <field name="name">poultry.death.search</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <search string="Search Dead Chickens">
                    <!-- Top search bar -->
                    <!--                    <field name="poultry_id"/>-->
                    <field name="branch_id"/>
                    <field name="reason"/>
                    <field name="date"/>

                    <!-- Group By options -->
                    <group expand="0" string="Group By">
                        <!--                        <filter name="group_by_poultry" string="Poultry" context="{'group_by': 'poultry_id'}"/>-->
                        <filter name="group_by_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                        <filter name="group_by_reason" string="Reason" context="{'group_by': 'reason'}"/>
                        <filter name="group_by_date" string="Date" context="{'group_by': 'date'}"/>
                    </group>

                    <!-- Search Panel -->
                    <searchpanel>
                        <field name="branch_id" string="Branch" icon="fa-sitemap"/>
                        <field name="reason" string="Reason" icon="fa-bug"/>
                        <field name="death_year" string="Year" select="1" icon="fa-calendar"/>
                        <field name="death_month" string="Month" select="1" icon="fa-calendar"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <!-- ===========================
             PIVOT VIEW: Dead Chickens
        ============================ -->
        <record id="view_poultry_death_pivot" model="ir.ui.view">
            <field name="name">poultry.death.pivot</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <pivot string="Poultry Death Analysis">
                    <field name="quantity" type="measure"/>
                    <field name="date" type="row"/>
                    <field name="branch_id" type="col"/>
                    <field name="reason"/>
                </pivot>
            </field>
        </record>

        <!-- ===========================
             GRAPH VIEW: Dead Chickens
        ============================ -->
        <record id="view_poultry_death_graph" model="ir.ui.view">
            <field name="name">poultry.death.graph</field>
            <field name="model">poultry.death</field>
            <field name="arch" type="xml">
                <graph string="Poultry Death Graph" type="bar">
                    <field name="date" type="row"/>
                    <field name="quantity" type="measure"/>
                    <field name="reason"/>
                </graph>
            </field>
        </record>

        <!-- ===========================
             ACTION: Dead Chickens
        ============================ -->
        <record id="action_poultry_death" model="ir.actions.act_window">
            <field name="name">Poultry Deaths</field>
            <field name="res_model">poultry.death</field>
            <field name="view_mode">kanban,tree,form,graph,pivot</field>
            <field name="search_view_id" ref="view_poultry_death_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record poultry deaths to keep track of stock reduction and identify causes.
                </p>
            </field>
        </record>

        <!-- ===========================
             MENU ITEM: Dead Chickens
        ============================ -->
        <menuitem id="menu_poultry_death"
                  name="Dead Chickens"
                  parent="menu_poultry"
                  action="action_poultry_death"
                  groups="poultry_farm.group_poultry_record_officer,poultry_farm.group_poultry_manager"
                  sequence="3"/>

    </data>
</odoo>
