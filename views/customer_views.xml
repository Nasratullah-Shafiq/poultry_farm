    <record id="view_poultry_customer_form" model="ir.ui.view">
        <field name="name">poultry.customer.form</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>

                    <group>
                        <field name="total_sale" readonly="1"/>
                        <field name="total_paid" readonly="1"/>
                        <!--                        <field name="remaining_amount" readonly="1"-->
                        <!--                               attrs="{'invisible': [('remaining_amount', '=', 0)]}"/>-->
                    </group>

                    <button name="action_register_payment" type="object"
                            string="Register Payment" class="oe_highlight"/>

                    <notebook>
                        <page string="Sales">
                            <field name="sale_ids">
                                <tree string="Sales of Customer">
                                    <field name="date"/>
                                    <field name="item_type_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="revenue"/>
                                    <field name="amount_paid"/>
                                    <field name="amount_due"/>
                                    <field name="payment_status"/>
                                    <field name="payment_type"/>
                                    <field name="due_date"/>
                                </tree>
                            </field>

                        </page>

                        <page string="Payments">
                            <field name="payment_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="payment_note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Graph View for Customer Payments -->
    <record id="view_poultry_customer_graph" model="ir.ui.view">
        <field name="name">poultry.customer.graph</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <graph string="Customer Payments" type="bar">
                <field name="name" type="row"/>
                <field name="total_sale" type="measure"/>
                <field name="total_paid" type="measure"/>
                <field name="balance" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_poultry_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">poultry.customer</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create new customers here.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_poultry_customer_root" name="Customers" parent="menu_poultry_farm" sequence="20"/>
    <menuitem id="menu_poultry_customer" name="Customers" parent="menu_poultry_customer_root"
              action="action_poultry_customer" sequence="10"/>
</odoo>
