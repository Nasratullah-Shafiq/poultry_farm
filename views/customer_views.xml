<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =======================
         FORM VIEW + CHATTER
    ======================== -->
    <record id="view_poultry_customer_form" model="ir.ui.view">
        <field name="name">poultry.customer.form</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <header>
                    <field name="payment_status" widget="statusbar"
                           statusbar_visible="fully_paid,partially_paid,not_paid"
                           statusbar_colors="fully_paid:green;partially_paid:orange;not_paid:red"/>
                </header>
                <sheet>
                    <!--  RIBBONS GO HERE  -->
                    <widget name="web_ribbon"
                            title="Not Paid"
                            bg_color="bg-danger"
                            invisible="payment_status != 'not_paid'"/>

                    <widget name="web_ribbon"
                            title="Partially Paid"
                            bg_color="bg-warning"
                            invisible="payment_status != 'partially_paid'"/>

                    <widget name="web_ribbon"
                            title="Paid"
                            bg_color="bg-success"
                            invisible="payment_status != 'fully_paid'"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>

                            <field name="total_sale" readonly="1"/>
                            <field name="total_paid" readonly="1"/>
                            <field name="debt" readonly="1"/>
                        </group>

                    </group>


                    <button name="action_register_payment"
                            type="object"
                            string="Register Payment"
                            class="oe_highlight"/>

                    <notebook>

                        <!-- SALES PAGE -->
                        <page string="Sales">
                            <field name="sale_ids">
                                <tree string="Sales Records">
                                    <field name="date"/>
                                    <field name="item_type_id"/>
                                    <field name="quantity"/>
                                    <field name="sale_price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>

                        <!-- PAYMENTS PAGE -->
                        <page string="Payments">
                            <field name="payment_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="payment_type"/>
                                    <field name="amount_due" readonly="1"/>
                                    <!--                                    <field name="payment_status" readonly="1"/>-->
                                    <field name="payment_note"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- =======================
         TREE VIEW
    ======================== -->
    <record id="view_poultry_customer_tree" model="ir.ui.view">
        <field name="name">poultry.customer.tree</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <tree string="Customers">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="total_sale"/>
                <field name="total_paid"/>
                <field name="debt"/>
                <field name="payment_status" widget="badge"
                       decoration-success="payment_status == 'fully_paid'"
                       decoration-warning="payment_status == 'partially_paid'"
                       decoration-danger="payment_status == 'not_paid'"/>

            </tree>
        </field>
    </record>


    <!--    kanban view for customer. view-->
    <record id="view_poultry_customer_kanban" model="ir.ui.view">
        <field name="name">poultry.customer.kanban</field>
        <field name="model">poultry.customer</field>

        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <!-- Declare required fields -->
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="total_sale"/>
                <field name="total_paid"/>
                <field name="debt"/>
                <field name="payment_status"/>
                <templates>
                    <t t-name="kanban-box">

                        <div class="oe_kanban_global_click o_kanban_card card-shadow p-3 mb-3"
                             style="border-radius: 12px; transition: transform 0.2s; cursor: pointer; font-size:16px;">

                            <!-- Header: Customer Name + Phone -->
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong class="h4 text-primary">
                                    <field name="name"/>
                                </strong>

                                <span class="badge bg-info text-white" style="font-size: 14px;">
                                    <i class="fa fa-phone me-2"></i>
                                    <field name="phone"/>
                                </span>
                            </div>

                            <!-- Body Details -->
                            <div class="o_kanban_details mb-2" style="line-height: 1.6;">

                                <!-- Email -->
                                <div>
                                    <i class="fa fa-envelope text-primary"></i>
                                    Email:
                                    <field name="email"/>
                                </div>

                                <!-- Total Sale -->
                                <div>
                                    <i class="fa fa-shopping-cart text-primary"></i>
                                    Total Sale:
                                    <span class="badge bg-primary text-white" style="font-size:14px;">
                                        <field name="total_sale"/>
                                    </span>
                                </div>

                                <!-- Total Paid -->
                                <div>
                                    <i class="fa fa-dollar-sign"></i>
                                    Total Paid:
                                    <span class="badge bg-success text-white" style="font-size:14px;">
                                        <field name="total_paid"/>
                                    </span>
                                </div>

                                <!-- Debt -->
                                <div>
                                    <i class="fa fa-exclamation-circle text-danger"></i>
                                    Total Debt:
                                    <span class="badge bg-danger text-white" style="font-size:14px;">
                                        <field name="debt"/>
                                    </span>
                                </div>

                            </div>

                            <!-- Footer -->
                            <div class="mt-3 d-flex align-items-center gap-2">

                                <!-- Customer Badge -->
                                <span class="badge bg-secondary rounded-pill px-3 py-1">
                                    <i class="fa fa-user me-1"/>
                                    Customer
                                </span>

                                <!-- Payment Status Pills (Tree-style) -->
                                <t t-if="record.payment_status.raw_value == 'fully_paid'">
                                    <span class="badge bg-success text-white rounded-pill px-3 py-1">
                                        Fully Paid
                                    </span>
                                </t>

                                <t t-if="record.payment_status.raw_value == 'partially_paid'">
                                    <span class="badge bg-warning text-dark rounded-pill px-3 py-1">
                                        Partially Paid
                                    </span>
                                </t>

                                <t t-if="record.payment_status.raw_value == 'not_paid'">
                                    <span class="badge bg-danger text-white rounded-pill px-3 py-1">
                                        Not Paid
                                    </span>
                                </t>

                            </div>

                        </div>

                    </t>
                </templates>

                <kanban quick_create="true"/>
            </kanban>


        </field>
    </record>


    <!-- =======================
         GRAPH VIEW
    ======================== -->
    <record id="view_poultry_customer_graph" model="ir.ui.view">
        <field name="name">poultry.customer.graph</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <graph string="Customer Statistics" type="bar">
                <field name="name" type="row"/>
                <field name="total_sale" type="measure"/>
                <field name="total_paid" type="measure"/>
                <field name="debt" type="measure"/>
            </graph>
        </field>
    </record>


    <!-- =======================
         PIVOT VIEW
    ======================== -->
    <record id="view_poultry_customer_pivot" model="ir.ui.view">
        <field name="name">poultry.customer.pivot</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <pivot string="Customer Pivot">
                <field name="name" type="row"/>
                <field name="total_sale" type="measure"/>
                <field name="total_paid" type="measure"/>
                <field name="debt" type="measure"/>
            </pivot>
        </field>
    </record>


    <!-- =======================
         SEARCH VIEW + SEARCH PANEL
    ======================== -->
    <record id="view_poultry_customer_search" model="ir.ui.view">
        <field name="name">poultry.customer.search</field>
        <field name="model">poultry.customer</field>
        <field name="arch" type="xml">
            <search string="Search Customers">

                <!-- Quick search -->
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>

                <!-- Filters -->
                <!--                <filter string="Has Debt" domain="[('debt','>',0)]"/>-->
                <!--                <filter string="Fully Paid" domain="[('debt','=',0)]"/>-->

            </search>
        </field>
    </record>


    <!-- =======================
         ACTION
    ======================== -->
    <record id="action_poultry_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">poultry.customer</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
        <field name="search_view_id" ref="view_poultry_customer_search"/>
    </record>


    <!-- =======================
         MENU ITEMS
    ======================== -->
    <menuitem id="menu_poultry_customers"
              name="Customers"
              parent="menu_poultry_customer"
              action="action_poultry_customer"
              sequence="5"
    />

</odoo>
