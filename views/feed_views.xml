<odoo>

    <!-- Feed -->
    <record id="view_feed_tree" model="ir.ui.view">
        <field name="name">poultry.feed.tree</field>
        <field name="model">poultry.feed</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="quantity"/>
                <field name="unit"/>
            </tree>
        </field>
    </record>
    <record id="view_feed_form" model="ir.ui.view">
        <field name="name">poultry.feed.form</field>
        <field name="model">poultry.feed</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="branch_id"/>
                        <field name="quantity"/>
                        <field name="unit"/>
                        <field name="purchase_price"/>
                        <field name="currency_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_feed" model="ir.actions.act_window">
        <field name="name">Feed Inventory</field>
        <field name="res_model">poultry.feed</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_poultry_feed" name="Feed" parent="menu_poultry_farm" action="action_feed"/>

    <!-- Feed Search View -->
    <record id="view_feed_search" model="ir.ui.view">
        <field name="name">poultry.feed.search</field>
        <field name="model">poultry.feed</field>
        <field name="arch" type="xml">
            <search string="Search Medicines">
                <field name="name"/>
                <field name="branch_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_branch" string="Branch" context="{'group_by':'branch_id'}"/>
                </group>
                <searchpanel>
                    <field name="branch_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>
