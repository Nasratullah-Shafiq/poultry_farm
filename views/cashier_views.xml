<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action & Menu -->
    <record id="action_poultry_cashier" model="ir.actions.act_window">
        <field name="name">Cashiers</field>
        <field name="res_model">poultry.cashier</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new cashier to start recording cash balances.
            </p>
        </field>
    </record>


    <menuitem id="menu_poultry_cash" parent="menu_poultry" name="Cash Management" sequence="15"/>
    <menuitem id="menu_poultry_cashier" parent="menu_poultry_cash" action="action_poultry_cashier" name="Cashiers" sequence="10"/>

    <!-- Search View -->
    <record id="view_poultry_cashier_search" model="ir.ui.view">
        <field name="name">poultry.cashier.search</field>
        <field name="model">poultry.cashier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Cashier"/>
                <field name="phone"/>
                <field name="email"/>
<!--                <filter string="Has AFN" domain="[('afn_balance','&gt;',0)]"/>-->
<!--                <filter string="Has USD" domain="[('usd_balance','&gt;',0)]"/>-->
<!--                <filter string="Has Kaldar" domain="[('kaldar_balance','&gt;',0)]"/>-->
<!--                <groupby string="Active" name="active"/>-->
            </search>

              <!-- Left Sidebar Search Panel -->
<!--        <searchpanel>-->
<!--            <field name="active" select="1"/>-->
<!--            <field name="afn_balance" string="AFN Balance" select="1"/>-->
<!--            <field name="usd_balance" string="USD Balance" select="1"/>-->
<!--            <field name="kaldar_balance" string="Kaldar Balance" select="1"/>-->
<!--        </searchpanel>-->
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_poultry_cashier_tree" model="ir.ui.view">
        <field name="name">poultry.cashier.tree</field>
        <field name="model">poultry.cashier</field>
        <field name="arch" type="xml">
            <tree string="Cashiers" create="true" edit="true">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="afn_balance" sum="Total AFN"/>
                <field name="usd_balance" sum="Total USD"/>
                <field name="kaldar_balance" sum="Total Kaldar"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View with Chatter -->
    <record id="view_poultry_cashier_form" model="ir.ui.view">
        <field name="name">poultry.cashier.form</field>
        <field name="model">poultry.cashier</field>
        <field name="arch" type="xml">
            <form string="Cashier" create="true" edit="true" version="14.0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Balances">
                            <group>
                                <field name="afn_balance"/>
                                <field name="usd_balance"/>
                                <field name="kaldar_balance"/>
                            </group>
                        </page>
                        <page string="Quick Actions">
                            <group>
                                <!-- Example quick buttons (adjust to your logic) -->
                                <button name="action_reconcile_cash" string="Reconcile" type="object" class="oe_highlight"
        invisible="not (afn_balance != 0 or usd_balance != 0 or kaldar_balance != 0)"/>
                                <button name="action_reset_balances" string="Reset Balances" type="object" class="oe_link"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- chatter area -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Graph View (balance overview) -->
    <record id="view_poultry_cashier_graph" model="ir.ui.view">
        <field name="name">poultry.cashier.graph</field>
        <field name="model">poultry.cashier</field>
        <field name="arch" type="xml">
            <graph string="Cashier Balances" type="bar">
                <field name="name" type="row"/>
                <field name="afn_balance" type="measure"/>
                <field name="usd_balance" type="measure"/>
                <field name="kaldar_balance" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_poultry_cashier_pivot" model="ir.ui.view">
        <field name="name">poultry.cashier.pivot</field>
        <field name="model">poultry.cashier</field>
        <field name="arch" type="xml">
            <pivot string="Cashier Pivot">
                <field name="name" type="row"/>
                <field name="afn_balance" type="measure"/>
                <field name="usd_balance" type="measure"/>
                <field name="kaldar_balance" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action window with default views & search -->
    <record id="action_window_poultry_cashier" model="ir.actions.act_window">
        <field name="name">Cashiers</field>
        <field name="res_model">poultry.cashier</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="view_id" ref="view_poultry_cashier_tree"/>
        <field name="search_view_id" ref="view_poultry_cashier_search"/>
    </record>

    <!-- attach the action to the menu (update action ref if needed) -->
    <menuitem id="menu_poultry_cashier_action" parent="menu_poultry_cash" action="action_window_poultry_cashier" sequence="20" />

</odoo>
