<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TREE VIEW -->
        <record id="view_salary_payment_tree" model="ir.ui.view">
            <field name="name">salary.payment.tree</field>
            <field name="model">salary.payment</field>
            <field name="arch" type="xml">
                <tree string="Salary Payments" create="true" edit="true" delete="true">
                    <field name="employee_id"/>
                    <field name="salary_date"/>
                    <field name="amount"/>
                    <field name="payment_status" widget="badge"
                           decoration-success="payment_status == 'paid'"
                           decoration-danger="payment_status == 'unpaid'"/>

                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW (with chatter) -->
        <record id="view_salary_payment_form" model="ir.ui.view">
            <field name="name">salary.payment.form</field>
            <field name="model">salary.payment</field>
            <field name="arch" type="xml">
                <form string="Salary Payment">
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="salary_date"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="payment_status"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                    <!-- Chatter for messages and activities -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- GRAPH VIEW -->
        <record id="view_salary_payment_graph" model="ir.ui.view">
            <field name="name">salary.payment.graph</field>
            <field name="model">salary.payment</field>
            <field name="arch" type="xml">
                <graph string="Salaries Graph" type="bar">
                    <field name="amount" type="measure"/>
                    <field name="salary_date" type="row"/>
                    <field name="employee_id" type="col"/>
                </graph>
            </field>
        </record>

        <!-- PIVOT VIEW -->
        <record id="view_salary_payment_pivot" model="ir.ui.view">
            <field name="name">salary.payment.pivot</field>
            <field name="model">salary.payment</field>
            <field name="arch" type="xml">
                <pivot string="Salary Pivot">
                    <field name="salary_date" type="row"/>
                    <field name="employee_id" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_salary_payment_search" model="ir.ui.view">
            <field name="name">salary.payment.search</field>
            <field name="model">salary.payment</field>
            <field name="arch" type="xml">
                <search string="Salary Payments">
                    <field name="employee_id"/>
                    <field name="salary_date"/>
                    <!--                    <filter string="This Month" name="filter_this_month"-->
                    <!--                            domain="[-->
                    <!--                                ('salary_date','>=', (context_today().replace(day=1))),-->
                    <!--                                ('salary_date','<=', context_today())-->
                    <!--                            ]"/>-->

                    <searchpanel>

                        <!-- Employee list -->
                        <field name="employee_id" string="Employees"/>
                        <field name="payment_status" string="Payment Status"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_salary_payment" model="ir.actions.act_window">
            <field name="name">Salary Payments</field>
            <field name="res_model">salary.payment</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="search_view_id" ref="view_salary_payment_search"/>
            <field name="help" type="html">
                <p>
                    Create and manage salary payments for employees.
                </p>
            </field>
        </record>

        <!-- MENU: put under HR (menu_poultry_hr must exist already) -->
        <menuitem id="menu_salary_payment"
                  name="Salary Payments"
                  parent="menu_poultry_hr"
                  action="action_salary_payment"
                  sequence="20"/>
    </data>
</odoo>
