<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ============================== -->
    <!-- TREE VIEW -->
    <!-- ============================== -->
    <record id="view_poultry_expense_tree" model="ir.ui.view">
        <field name="name">poultry.expense.tree</field>
        <field name="model">poultry.expense</field>
        <field name="arch" type="xml">
            <tree string="Branch Expenses">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="farm_id"/>
                <field name="cash_account_id"/>
                <field name="expense_type_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- ============================== -->
    <!-- FORM VIEW -->
    <!-- ============================== -->
        <record id="view_poultry_expense_form" model="ir.ui.view">
        <field name="name">poultry.expense.form</field>
        <field name="model">poultry.expense</field>
        <field name="arch" type="xml">
            <form string="Branch Expense">
                <header>
                <!-- Button to mark as done -->
                <button name="action_expense_done"
                        string="Mark as Expense Done"
                        type="object"
                        class="btn-primary"
                        invisible="expense_status != 'new'"/>

                <!-- Status Bar -->
                <field name="expense_status"
                       widget="statusbar"
                       statusbar_visible="new,done"/>
            </header>
                <!-- Optional: Expense Status Ribbon -->
                <sheet>
                    <field name="expense_status" invisible="1"/>
                    <widget name="web_ribbon"
                            title="New Expense"
                            bg_color="bg-warning"
                            invisible="expense_status != 'new'"/>
                    <widget name="web_ribbon"
                            title="Expense Done"
                            bg_color="bg-success"
                            invisible="expense_status != 'done'"/>


                    <!-- Branch / Farm Information -->
                    <group string="Branch and Farm Information">
                        <field name="branch_id"/>
                        <field name="farm_id" domain="[('branch_id', '=', branch_id)]"/>
                        <field name="cash_account_id" readonly="1"/>
                        <field name="cash_balance" readonly="1"/>
                    </group>

                    <!-- Expense Details -->
                    <group string="Expense Details">
                        <field name="name" string="Description"/>
                        <field name="expense_type_id"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="user_id" readonly="1"/>
                    </group>

                    <!-- Notes / Additional Information -->
                    <group string="Notes">
                        <field name="note"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>


    <!-- ============================== -->
    <!-- PIVOT VIEW -->
    <!-- ============================== -->
    <record id="view_poultry_expense_pivot" model="ir.ui.view">
        <field name="name">poultry.expense.pivot</field>
        <field name="model">poultry.expense</field>
        <field name="arch" type="xml">
            <pivot string="Expense Analysis">
                <field name="branch_id" type="row"/>
                <field name="expense_type_id" type="col"/>
                <field name="amount" type="measure"/>
                <field name="date" type="row"/>
            </pivot>
        </field>
    </record>

    <!-- ============================== -->
    <!-- GRAPH VIEW -->
    <!-- ============================== -->
    <record id="view_poultry_expense_graph" model="ir.ui.view">
        <field name="name">poultry.expense.graph</field>
        <field name="model">poultry.expense</field>
        <field name="arch" type="xml">
            <graph string="Expenses" type="bar">
                <field name="date" type="row"/>
                <field name="amount" type="measure"/>
                <field name="expense_type_id" type="col"/>
            </graph>
        </field>
    </record>

    <!-- ============================== -->
    <!-- SEARCH VIEW WITH SEARCH PANEL FOR EXPENSES -->
    <!-- ============================== -->
    <record id="view_poultry_expense_search" model="ir.ui.view">
        <field name="name">poultry.expense.search</field>
        <field name="model">poultry.expense</field>
        <field name="arch" type="xml">
            <search string="Branch Expenses">

                <!-- Quick search fields -->
                <field name="branch_id"/>
                <field name="expense_type_id"/>
                <field name="user_id"/>
                <field name="date"/>

                <!-- Search panel -->
                <searchpanel>
                    <field name="branch_id" string="Branch" icon="fa-sitemap"/>
                    <field name="expense_type_id" string="Expense Type" icon="fa-list"/>
                    <!--                <field name="user_id" string="Recorded By" icon="fa-user"/>-->
                    <!--                <field name="date" string="Date" icon="fa-calendar"/>-->
                    <field name="expense_year" string="Year" select="1" icon="fa-calendar"/>
                    <field name="expense_month" string="Month" select="1" icon="fa-calendar"/>
                </searchpanel>

            </search>
        </field>
    </record>


    <!-- ============================== -->
    <!-- ACTION -->
    <!-- ============================== -->
    <record id="action_poultry_expense" model="ir.actions.act_window">
        <field name="name">Branch Expenses</field>
        <field name="res_model">poultry.expense</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_poultry_expense_search"/>
    </record>

    <!-- ============================== -->
    <!-- MENU ITEM -->
    <!-- ============================== -->
    <menuitem id="menu_poultry_expense"
              name="Branch Expenses"
              parent="menu_poultry_finance"
              action="action_poultry_expense"/>

</odoo>
