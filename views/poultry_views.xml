<odoo>
    <!-- =========================
         Poultry Stock Views and Menus
    ========================= -->

    <!-- =========================
         Tree View for Poultry Stock
         Displays branch, poultry type, total quantity, and last updated
         Read-only: Users cannot create or edit records from the tree view
    ========================= -->
    <record id="view_poultry_farm_tree" model="ir.ui.view">
        <field name="name">poultry.farm.tree</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <tree string="Poultry Stock" create="false" edit="false">
                <field name="branch_id"/>
                <field name="farm_id"/>
                <field name="item_type_id"/>
                <field name="total_quantity"/>
                <field name="uom_id"/>
                <field name="last_updated"/>
            </tree>
        </field>
    </record>

    <!-- =========================
         Search View for Poultry Stock
         Allows filtering by branch and poultry type
         Includes a search panel for easy filtering by type
    ========================= -->
    <record id="view_poultry_farm_search" model="ir.ui.view">
        <field name="name">poultry.farm.search</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <search string="Search Stock">
                <field name="branch_id"/>
                <field name="item_type_id"/>

                <!-- Search panel for quick filtering by poultry type -->
                <searchpanel>
                    <field name="branch_id" string="Branch" icon="fa-sitemap"/>
                    <field name="farm_id" string="Farm House" icon="fa-building"/>
                    <field name="item_type_id" string="Type" icon="fa-tags"/>

                </searchpanel>
            </search>
        </field>
    </record>

    <!-- =========================
         Form View for Poultry Stock
         Displays details of a single stock record
         All fields are read-only to prevent accidental changes
    ========================= -->
    <record id="view_poultry_farm_form" model="ir.ui.view">
        <field name="name">poultry.farm.form</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <form string="Poultry Stock">
                <sheet>
                    <group>
                        <field name="branch_id" readonly="1"/>
                        <field name="item_type_id" readonly="1"/>
                        <field name="total_quantity" readonly="1"/>
                        <field name="last_updated" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_poultry_farm_kanban" model="ir.ui.view">
        <field name="name">poultry.farm.kanban</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_with_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card shadow-sm"
                             style="border-radius: 10px; overflow: hidden;">

                            <!-- Header -->
                            <div style="background:#4CAF50; padding:10px; color:white; font-size:16px;">
                                <i class="fa fa-home"></i>
                                <strong>
                                    <field name="farm_id"/>
                                </strong>
                            </div>

                            <div style="padding:12px;">

                                <!-- Poultry Type -->
                                <div style="margin-bottom:8px;">
                                    <i class="fa fa-dove text-primary"></i>
                                    <strong>Poultry Type:</strong>
                                    <field name="item_type_id"/>
                                </div>

                                <!-- Branch -->
                                <div style="margin-bottom:8px;">
                                    <i class="fa fa-code-branch text-warning"></i>
                                    <strong>Branch:</strong>
                                    <field name="branch_id"/>
                                </div>

                                <!-- Farm -->
                                <div style="margin-bottom:8px;">
                                    <i class="fa fa-warehouse text-info"></i>
                                    <strong>Farm House:</strong>
                                    <field name="farm_id"/>
                                </div>

                                <!-- Total Quantity -->
                                <div style="margin-top:12px;">
                                    <i class="fa fa-boxes text-success"></i>
                                    <strong>Total Quantity:</strong>
                                    <field name="total_quantity"/>
                                </div>

                                <!-- Progress bar (Optional visual enhancement) -->
                                <div class="progress" style="height:6px; margin-top:5px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         t-att-style="'width:' + (record.total_quantity.value > 0 ? record.total_quantity.value : 1) + '%;'">
                                    </div>
                                </div>

                                <!-- Last Updated -->
                                <div style="margin-top:12px; font-size:13px;">
                                    <i class="fa fa-clock text-muted"></i>
                                    <strong>Updated:</strong>
                                    <field name="last_updated"/>
                                </div>

                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


