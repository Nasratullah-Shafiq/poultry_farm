<odoo>
    <!-- =========================
         Poultry Stock Views and Menus
    ========================= -->

    <!-- =========================
         Tree View for Poultry Stock
         Displays branch, poultry type, total quantity, and last updated
         Read-only: Users cannot create or edit records from the tree view
    ========================= -->
    <record id="view_poultry_farm_tree" model="ir.ui.view">
        <field name="name">poultry.farm.tree</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <tree string="Poultry Stock" create="false" edit="false">
                <field name="branch_id"/>
                <field name="farm_id"/>
                <field name="item_type_id"/>
                <field name="total_quantity"/>
                <field name="uom_id"/>
                <field name="last_updated"/>
            </tree>
        </field>
    </record>

    <!-- =========================
         Search View for Poultry Stock
         Allows filtering by branch and poultry type
         Includes a search panel for easy filtering by type
    ========================= -->
    <record id="view_poultry_farm_search" model="ir.ui.view">
        <field name="name">poultry.farm.search</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <search string="Search Stock">
                <field name="branch_id"/>
                <field name="item_type_id"/>

                <!-- Search panel for quick filtering by poultry type -->
                <searchpanel>
                    <field name="branch_id" string="Branch" icon="fa-sitemap"/>
                    <field name="farm_id" string="Farm House" icon="fa-home"/>
                    <field name="item_type_id" string="Type" icon="fa-tags"/>

                </searchpanel>
            </search>
        </field>
    </record>

    <!-- =========================
         Form View for Poultry Stock
         Displays details of a single stock record
         All fields are read-only to prevent accidental changes
    ========================= -->
    <record id="view_poultry_farm_form" model="ir.ui.view">
        <field name="name">poultry.farm.form</field>
        <field name="model">poultry.farm</field>
        <field name="arch" type="xml">
            <form string="Poultry Stock">
                <sheet>
                    <group>
                        <field name="branch_id" readonly="1"/>
                        <field name="item_type_id" readonly="1"/>
                        <field name="total_quantity" readonly="1"/>
                        <field name="last_updated" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--    kanban view poultry.farm -->
    <record id="view_poultry_farm_kanban" model="ir.ui.view">
    <field name="name">poultry.farm.kanban</field>
    <field name="model">poultry.farm</field>

    <field name="arch" type="xml">
        <kanban class="o_kanban_example">
            <templates>
                <t t-name="kanban-box">

                    <div class="oe_kanban_global_click o_kanban_card card-shadow p-3 mb-3"
                         style="border-radius: 12px; transition: transform 0.2s; cursor: pointer;">

                        <!-- Header: Poultry Type + Branch -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong class="h4 text-primary">
                                <field name="branch_id"/>
                            </strong>

                            <span class="badge bg-info text-white" style="font-size: 14px;">
                                <i class="fa fa-code-branch"></i>
                                <field name="farm_id"/>
                            </span>
                        </div>

                        <!-- Body Details -->
                        <div class="o_kanban_details mb-2">

                            <!-- Farm House -->
                            <div>
                                <i class="fa fa-warehouse text-secondary"></i>
                                Farm House:
                                <field name="item_type_id"/>
                            </div>

                            <!-- Total Quantity -->
                            <div style="font-size: 14px;">
                                <i class="fa fa-box text-success"></i>
                                Total Quantity:
                                <span class="badge bg-secondary" style="font-size: 14px;">
                                    <field name="total_quantity"/>
                                </span>
                            </div>

                            <!-- Purchase / Sale Record Info -->
                            <div>
                                <i class="fa fa-shopping-cart text-primary"></i>
                                Purchases:
                                <span class="badge bg-primary">
<!--                                    <field name="purchase_count"/>-->
                                </span>
                            </div>

                            <div>
                                <i class="fa fa-money-bill text-warning"></i>
                                Sales:
                                <span class="badge bg-warning text-dark">
<!--                                    <field name="sale_count"/>-->
                                </span>
                            </div>

                        </div>

                        <!-- Footer: Updated Date -->
                        <div class="mt-3">
                            <span class="badge bg-secondary">
                                <i class="fa fa-clock"></i>
                                Updated: <field name="last_updated"/>
                            </span>
                        </div>

                    </div>

                </t>
            </templates>

            <kanban quick_create="true"/>
        </kanban>
    </field>
</record>

    <!-- =========================
         Action Window for Poultry Stock
         Links tree and form views
         Associates with the search view for filtering
    ========================= -->
    <record id="action_poultry" model="ir.actions.act_window">
        <field name="name">Poultry Records</field>
        <field name="res_model">poultry.farm</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_poultry_farm_search"/>
    </record>

    <!-- =========================
         Menu Items
         Root menu: Poultry Farm
         Submenu: Farm, opens Poultry Records action
    ========================= -->
    <menuitem id="menu_poultry" name="Poultry Farm"/>
    <menuitem id="menu_poultry" name="Poultry Farm" action="action_poultry"/>

</odoo>
