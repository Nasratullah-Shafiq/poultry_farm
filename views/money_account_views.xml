<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_poultry_money_account_tree" model="ir.ui.view">
        <field name="name">poultry.money.account.tree</field>
        <field name="model">poultry.money.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="account_type"/>
                <field name="branch_id"/>
                <field name="cashier_id"/>
                <field name="currency_type"/>
                <field name="balance"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_poultry_money_account_form" model="ir.ui.view">
        <field name="name">poultry.money.account.form</field>
        <field name="model">poultry.money.account</field>
        <field name="arch" type="xml">
            <form string="Money Account">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_type"/>
                    </group>

                    <group>
                        <!--                        <field name="branch_id" invisible="account_type != 'branch'"/>-->
                        <!--                        <field name="cashier_id" invisible="account_type != 'cashier'"/>-->
                        <field name="branch_id" invisible="account_type not in ('main', 'marco', 'bagram')"/>
                        <field name="cashier_id" invisible="account_type != 'cashier'"/>
                    </group>

                    <group>
                        <field name="currency_type"/>
                        <field name="balance" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_poultry_money_account" model="ir.actions.act_window">
        <field name="name">Money Accounts</field>
        <field name="res_model">poultry.money.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MAIN MENU -->
    <menuitem id="menu_poultry_finance_root"
              name="Finance"
              sequence="30"/>

    <!-- SUB MENU -->
    <menuitem id="menu_poultry_money_account"
              name="Money Accounts"
              parent="menu_poultry_finance_root"
              action="action_poultry_money_account"
              sequence="10"/>

</odoo>
