<odoo>
    <!-- Wizard Form View -->
    <record id="view_poultry_sale_report_wizard_form" model="ir.ui.view">
        <field name="name">poultry.sale.report.wizard.form</field>
        <field name="model">poultry.sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Poultry Sales Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="branch_id"/>
                </group>
                <group>
                    <field name="total_sales_amount" readonly="1"/>
                    <field name="total_quantity" readonly="1"/>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_poultry_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Poultry Sales Report</field>
        <field name="res_model">poultry.sale.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_poultry_sale_report"
              name="Sales Report"
              parent="menu_finance_reports"
              action="action_poultry_sale_report_wizard"
              sequence="20"/>
</odoo>
