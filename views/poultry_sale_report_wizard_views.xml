<odoo>
    <record id="view_poultry_sale_report_wizard" model="ir.ui.view">
        <field name="name">poultry.sale.report.wizard.form</field>
        <field name="model">poultry.sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Poultry Sale Report Wizard">
                <group>
                    <field name="branch_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>

                <group string="Summary Totals">
                    <field name="total_quantity" readonly="1"/>
                    <field name="total_revenue" readonly="1"/>
                </group>

                <group string="Sale Details">
                    <field name="sale_lines" readonly="1">
                        <tree>
                            <field name="date"/>
                            <field name="branch_id"/>
                            <field name="poultry_type_id"/>
                            <field name="buyer"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="revenue"/>
                        </tree>
                    </field>
                </group>

                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Print PDF" type="object" name="print_pdf_report" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_poultry_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Poultry Sale Report</field>
        <field name="res_model">poultry.sale.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_poultry_sale_report"
              name="Sale Report"
              parent="menu_finance_reports"
              action="action_poultry_sale_report_wizard"
              sequence="10"/>
</odoo>
