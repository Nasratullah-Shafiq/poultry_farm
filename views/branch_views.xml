<odoo>
    <record id="view_branch_tree" model="ir.ui.view">
        <field name="name">poultry.branch.tree</field>
        <field name="model">poultry.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="is_main"/>
                <field name="manager_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_branch_form" model="ir.ui.view">
        <field name="name">poultry.branch.form</field>
        <field name="model">poultry.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="is_main"/>
                        <field name="manager_ids"/>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Farms">
                            <field name="farm_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="location"/>
                                    <field name="capacity"/>
                                    <field name="current_stock"/>
                                    <field name="state"/>
                                    <field name="manager_id"/>
                                </tree>

                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="branch_id" readonly="1"/>
                                        <field name="location"/>
                                        <field name="capacity"/>
                                        <field name="current_stock" readonly="1"/>
                                        <field name="manager_id"/>
                                        <field name="state"/>
                                        <field name="note"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <!-- âœ… Chatter placed inside the form correctly -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
