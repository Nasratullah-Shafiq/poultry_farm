<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =======================
         EXPENSE REPORT WIZARD
    ======================== -->
    <record id="view_expense_report_wizard" model="ir.ui.view">
        <field name="name">expense.report.wizard.form</field>
        <field name="model">expense.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Branch and Farm Expense Report">

                <!-- Filters -->
                <group>
                    <field name="branch_id"/>
                    <field name="farm_id"
                           domain="[('branch_id', '=', branch_id)]"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>

                <!-- Summary -->
                <group string="Summary">
                    <field name="total_expense_amount" readonly="1"/>
                </group>

                <!-- Expense Details -->
                <group string="Expense Details">
                    <field name="expense_lines" readonly="1" string="">
                        <tree>
                            <field name="expense_date"/>
                            <field name="branch_id"/>
                            <field name="farm_id"/>
                            <field name="expense_type_id"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </group>

                <!-- Footer Buttons -->
                <footer>
                    <button name="generate_report"
                            string="Generate Report"
                            type="object"
                            class="btn-primary"/>

                    <button name="print_pdf_report"
                            string="Print PDF"
                            type="object"
                            class="btn-secondary"/>

                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>

    <!-- =======================
         ACTION
    ======================== -->
    <record id="action_expense_report_wizard" model="ir.actions.act_window">
        <field name="name">Branch and Farm Expense Report</field>
        <field name="res_model">expense.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- =======================
         MENU
    ======================== -->
    <menuitem id="menu_expense_report"
              name="Branch and Farm Expense Report"
              parent="menu_finance_reports"
              action="action_expense_report_wizard"
              sequence="30"/>

</odoo>

