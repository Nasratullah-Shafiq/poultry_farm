<odoo>
    <record id="view_cash_account_report_wizard" model="ir.ui.view">
        <field name="name">cash.account.report.wizard.form</field>
        <field name="model">cash.account.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Cash Account Report">
                <sheet>

                    <group>
                        <field name="account_type"/>
                    </group>

                    <group string="Summary Totals">
                        <field name="total_afn" readonly="1"/>
                        <field name="total_usd" readonly="1"/>
                        <field name="total_kld" readonly="1"/>
                    </group>

                    <group string="Deposit Details">
                        <field name="deposit_lines" readonly="1" string="">
                            <tree>
                                <field name="date"/>
                                <field name="account_no"/>
                                <field name="account_type"/>
                                <field name="currency_type"/>
                                <field name="amount"/>
                                <field name="user_id"/>
                                <field name="note"/>
                            </tree>
                        </field>
                    </group>

                    <footer>
                        <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button name="print_pdf_report" string="Print PDF" type="object" class="btn-secondary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>
        <record id="action_cash_account_report_wizard" model="ir.actions.act_window">
        <field name="name">Cash Account Report</field>
        <field name="res_model">cash.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
