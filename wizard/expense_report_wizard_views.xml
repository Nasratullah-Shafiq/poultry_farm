<odoo>
    <record id="view_expense_report_wizard" model="ir.ui.view">
        <field name="name">expense.report.wizard.form</field>
        <field name="model">expense.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Branch Expense Report">
                <group>
                    <field name="branch_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>

                <group string="Summary">
                    <field name="total_expense_amount" readonly="1"/>
                </group>

                <group string="Expense Details">
                    <field name="expense_lines" readonly="1">
                        <tree>
                            <field name="expense_date"/>
                            <field name="branch_id"/>
                            <field name="expense_type_id"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </group>

                <footer>
                    <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button name="print_pdf_report" string="Print PDF" type="object" class="btn-secondary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_expense_report_wizard" model="ir.actions.act_window">
        <field name="name">Branch Expense Report</field>
        <field name="res_model">expense.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_expense_report"
              name="Branch Expense Report"
              parent="menu_finance_reports"
              action="action_expense_report_wizard"
              sequence="30"/>

</odoo>